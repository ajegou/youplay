#!/bin/bash

player='omxplayer' # default valid for pi

conf_file=~/.play.conf
[[ -f $conf_file ]] && source $conf_file

if [[ "$1" == "--autoplay" ]]; then
  autoplay="$1"
  shift
fi

src=$*

# play
[[ "$audio_only" == "true" ]] && format="bestaudio" || format="best"
url=$(youtube-dl -g -f $format "$src")
${player} "$url"
yousearch $autoplay $src
